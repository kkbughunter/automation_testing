    "tests": [
        {
            "name": "Login Success",
            "url": "https://devnadal.in.net/Login.php",
            "actions": [
                {
                    "type": "type",
                    "selector": "input[name='Username']",
                    "value": "NadalVerify"
                },
                {
                    "type": "type",
                    "selector": "input[name='Password']",
                    "value": "NadalService@123"
                },
                {
                    "type": "click",
                    "selector": "input[type='submit']"
                },
                {
                    "type": "wait",
                    "duration": 2500
                },
                {
                    "type": "click",
                    "selector": "a[href='#form-elements']",
                    "waitAfter": 1500
                }
            ],
            "expectedElement": "a[href='FetchClienttele.php']",
            "expectedText": "Clientele",
            "checkInContainer": "#form-elements",
            "expectedUrlContains": "/Admin/index.php",
